@model RoyalHall.DTOs.BookingDTOs.AddBookingDTO
@{
    ViewData["Title"] = "AddBooking";
    var halls = ViewBag.Halls as List<SelectListItem>;
    string price = Convert.ToString(ViewBag.Price);
    string price2 = Convert.ToString(ViewBag.Price * 2);
    int id = Convert.ToInt32(ViewBag.HallId);
}
<!-- ========== FORM SECTION ========== -->
<div class="container mt-5">
    <div class="card shadow-lg" style="border: 2px solid #800000;">
        <div class="card-header text-center" style="background-color: #f5f5dc; color: #800000;">
            <h2>Create New Booking (@ViewBag.HallName)</h2>
        </div>
        <div class="card-body" style="background-color: #fffaf0;">
            <form asp-action="AddBooking" method="post">
                <div class="form-group">
                    <label asp-for="HallId"></label>
                    <input asp-for="HallId" type="hidden" id="HallId" name="HallId" value="@ViewBag.HallId" />
                    <input type="text" class="form-control" value="@ViewBag.HallId" readonly />
                </div>
                @* <div class="form-group"> *@
                @*     <label asp-for="PersonName"></label> *@
                @*     <input asp-for="PersonName" class="form-control" /> *@
                @* </div> *@
