@model List<RoyalHall.DTOs.HallDTOs.GetHallDTO>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int x = ViewBag.IsAdmin == null ? 0 : ViewBag.IsAdmin;
    bool isAdmin = x > 0;
}

<!-- ========== HEADER (صور + لوقو) ========== -->
<header class="bg-light text-center py-5 w-100">
    <div class="container-fluid">
        <div class="text-center my-0">
            <h2 class="display-4 fw-bold" style="color: #800000; text-shadow: 1px 1px 2px #d2b48c;">
                Welcome to <span style="color: #b8860b;">Royal</span> for Booking Halls
            </h2>
            <p class="lead" style="font-size: 1.25rem; color: #555;">
                Book the hall that suits you <span style="color: #800000; font-weight: 500;">easily and elegantly</span>!
            </p>
        </div>

        <!-- صور متغيرة (Carousel) -->
        <div id="carouselExampleIndicators" class="carousel slide mt-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Imges/IMG_9615.JPG" class="d-block w-100" alt="Hall one" style="height: 600px; object-fit: cover;">
                </div>
                <div class="carousel-item">
                    <img src="~/Imges/IMG_9617.JPG" class="d-block w-100" alt="Hall two" style="height: 600px; object-fit: cover;">
                </div>
                <div class="carousel-item">
                    <img src="~/Imges/IMG_9619.JPG" class="d-block w-100" alt="Hall three" style="height: 600px; object-fit: cover;">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</header>

<!-- ========== BODY: عرض القاعات ========== -->
@if(isAdmin)
{
    <section class="container-fluid my-5">
        <h2 class="text-center mb-4">Manage the Halls</h2>
        <div class="row">
            <!-- قاعة 1 -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 d-flex flex-column">
                    <a class="nav-link" href="@Url.Action("AddHall","Hall")" style="color: #800000; font-weight: 500;">Add New Hall</a>

                </div>
            </div>
        </div>

    </section>
}



<section class="container-fluid my-5">
    <h2 class="text-center mb-4">Choose Suitable Hall</h2>
    <div class="row">
        @foreach (var hall in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 d-flex flex-column">
                    <img src="@hall.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@hall.Name">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@hall.Name</h5>
                        <a asp-controller="Hall" asp-action="ShowDetailsHall1" asp-route-id="@hall.HallId" class="btn btn-outline-dark mt-auto" style="color:#800000; border-color:#800000;">
                            Show Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>






