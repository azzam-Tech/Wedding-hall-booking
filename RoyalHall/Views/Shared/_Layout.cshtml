<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link href="c:\users\repair2025\source\repos\royalhall\royalhall\views\shared\_layout.cshtml.css" rel="stylesheet" />
    <a href="c:\users\repair2025\source\repos\royalhall\royalhall\views\shared\_layout.cshtml"></a>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoyalHall</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RoyalHall.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        int x = ViewBag.IsAdmin == null ? 0 : ViewBag.IsAdmin;
        bool isAdmin = x > 0;

        string lableName = isAdmin ? "Hall Bokkings Details" : "My Bookings Details";

        int x2 = ViewBag.IsLogin == null ? 0 : ViewBag.IsLogin;
        bool isLogin = x2 > 0;
    }
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: #f5f5dc;">
            <!-- لون بيج -->
            <div class="container-fluid">
                <img src="~/Imges/IMG_9603.jpg" alt="Logo"
                     style="height: 70px; border-radius: 50%; object-fit: cover;" />
                <a class="navbar-brand ms-2" href="#" style="color: #800000; font-weight: bold;">Royal Halls</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href=" @Url.Action("Index", "Home")" style="color: #800000; font-weight: 500;">Home</a>
                        </li>
                        @if(isLogin == false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href=" @Url.Action("Registeration", "Customer")" style="color: #800000; font-weight: 500;">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href=" @Url.Action("Login", "Customer")" style="color: #800000; font-weight: 500;">Login</a>
                            </li>
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SupportPage","Home")" style="color: #800000; font-weight: 500;">Support</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("BookingDetails","Booking")" style="color: #800000; font-weight: 500;">@lableName</a>
                        </li>
                    </ul>
                </div>

                <style>
                    /* تحسين شكل الروابط في النافبار */
                    .navbar-nav .nav-link {
                        font-size: 1rem;
                        font-weight: 500;
                        transition: all 0.3s ease;
                    }

                        /* تأثيرات عند التمرير على الروابط */
                        .navbar-nav .nav-link:hover {
                            color: #ff6347 !important;
                            text-decoration: underline;
                            transform: scale(1.05); /* تكبير الرابط عند التمرير */
                        }

                        /* تأثير عند النقر على الرابط */
                        .navbar-nav .nav-link:active {
                            color: #ff6347 !important;
                            font-weight: bold;
                        }

                    /* تحسين التباعد بين العناصر */
                    .navbar-nav {
                        display: flex;
                        justify-content: flex-end;
                        align-items: center;
                        margin-left: auto;
                    }

                        /* تفاعل الحركات عند التمرير */
                        .navbar-nav .nav-item {
                            margin-right: 20px; /* تباعد بين العناصر */
                        }

                    .navbar-nav {
                        text-align: center; /* محاذاة العناصر للوسط */
                    }

                    }
                </style>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ========== FOOTER ========== -->
    <footer class="text-white text-center py-4 mt-5" style="background-color: #800000;">
        <div class="container">
            <p>Contact Us: info@Royal.com | 777524267</p>
            <p>&copy; 2025 All rights reserved</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
